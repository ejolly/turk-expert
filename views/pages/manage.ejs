                                                    var hitUploadResult = window.location.href.split('hitUploadResult=')[1];
                                                    if(hitUploadResult){
                                                        document.getElementById("HIT-CSV-Result").innerHTML = '<p>Result:<br/>'+ decodeURIComponent(hitUploadResult) +'</p>';
                                                    }
                                                    </script>
                                                </label>
                                            </div>
                                            <button class="btn btn-success pull-right" type="submit">Upload</button>
                                        </form>
                                    </div>
                                </div>

                                <div class="panel panel-success">
